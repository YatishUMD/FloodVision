{
  "datasets": {
    "sentinel_data": {
      "path": "./data/sentinel_data",
      "description": "Sentinel-1 & Sentinel-2 data from Copernicus Data Space Ecosystem",
      "sar_bands": ["VV", "VH"],
      "optical_bands": ["B2", "B3", "B4", "B8"],
      "sar_resolution": 10,
      "optical_resolution": 10,
      "enabled": true,
      "source": "Copernicus Data Space Ecosystem",
      "cloud_coverage_filter": "<20%",
      "time_period": "2021-2022"
    },
    "sen12_flood": {
      "path": "./data/SEN12-FLOOD",
      "description": "SEN12-FLOOD dataset for flood event testing",
      "sar_bands": ["VV", "VH"],
      "optical_bands": ["B2", "B3", "B4", "B8"],
      "sar_resolution": 10,
      "optical_resolution": 10,
      "enabled": true
    },
    "sen1floods11": {
      "path": "./data/SEN1Floods11",
      "description": "SEN1Floods11 dataset for segmentation masks",
      "sar_bands": ["VV", "VH"],
      "optical_bands": ["B2", "B3", "B4", "B8"],
      "sar_resolution": 10,
      "optical_resolution": 10,
      "enabled": true
    }
  },
  "processing": {
    "target_resolution": 10,
    "patch_size": 256,
    "overlap": 0.5,
    "interpolation_method": "bilinear",
    "sar_normalization": "zscore",
    "optical_normalization": "zscore",
    "augmentation": true,
    "augmentation_prob": 0.5,
    "speckle_filtering": true,
    "atmospheric_correction": true,
    "cloud_coverage_threshold": 0.2,
    "flood_prone_months": ["2021", "2022"]
  },
  "model": {
    "input_channels": {
      "sar": 2,
      "optical": 4,
      "combined": 6
    },
    "num_classes": 2,
    "model_types": ["optical_only", "sar_only", "early_fusion"],
    "baseline_models": ["U-Net", "SegFormer"]
  },
  "training": {
    "batch_size": 8,
    "num_workers": 4,
    "learning_rate": 0.001,
    "num_epochs": 100,
    "early_stopping_patience": 10,
    "weight_decay": 1e-4,
    "optimizer": "adam",
    "scheduler": "cosine",
    "loss_function": "cross_entropy"
  },
  "data_splits": {
    "train_split": 0.7,
    "val_split": 0.2,
    "test_split": 0.1,
    "random_seed": 42
  },
  "output": {
    "processed_path": "./data/processed",
    "model_save_path": "./models",
    "results_path": "./results",
    "logs_path": "./logs",
    "checkpoint_frequency": 10,
    "save_best_model": true
  },
  "evaluation": {
    "metrics": ["iou", "f1_score", "boundary_iou"],
    "visualization": true,
    "save_predictions": true,
    "confusion_matrix": true,
    "cross_region_validation": true,
    "regions": ["Africa", "South Asia", "Australia"]
  },
  "hardware": {
    "device": "auto",
    "mixed_precision": true,
    "pin_memory": true,
    "num_workers": 4
  },
  "logging": {
    "level": "INFO",
    "log_to_file": true,
    "log_to_console": true,
    "log_frequency": 100
  }
}
